{
  "env": {
    "node": true,
    "es2022": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 2022
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "node/no-unpublished-require": "off",
    "node/no-missing-require": "off",
    "prefer-const": "warn",
    "eqeqeq": ["warn", "always"],
    "no-var": "error"
  }
}
